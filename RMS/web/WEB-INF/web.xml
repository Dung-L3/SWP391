<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
	 version="6.0">
 <welcome-file-list>
        <welcome-file>common/Homepage.jsp</welcome-file>
    </welcome-file-list>

    <!-- Staff Management Servlet -->
    <servlet>
        <servlet-name>StaffManagementServlet</servlet-name>
        <servlet-class>Controller.StaffManagementServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>StaffManagementServlet</servlet-name>
        <url-pattern>/staff-management</url-pattern>
    </servlet-mapping>

    <!-- Home Servlet -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Controller.auth.HomeServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.auth.LoginServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <!-- Admin Dashboard Servlet -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>Controller.AdminServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuditLogServlet</servlet-name>
        <servlet-class>Controller.AuditLogServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AuditLogServlet</servlet-name>
        <url-pattern>/audit-log</url-pattern>
    </servlet-mapping>

    <!-- Table Management Servlet -->
    <servlet>
        <servlet-name>TableServlet</servlet-name>
        <servlet-class>Controller.TableServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>TableServlet</servlet-name>
        <url-pattern>/tables</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>TableServlet</servlet-name>
        <url-pattern>/tables/*</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>Controller.DashboardServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Menu Management Servlet -->
    <servlet>
        <servlet-name>MenuManagementServlet</servlet-name>
        <servlet-class>Controller.MenuManagementServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>MenuManagementServlet</servlet-name>
        <url-pattern>/menu-management</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MenuManagementServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <!-- Voucher Management Servlet -->
    <servlet>
        <servlet-name>VoucherManagementServlet</servlet-name>
        <servlet-class>Controller.VoucherManagementServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>VoucherManagementServlet</servlet-name>
        <url-pattern>/voucher-management</url-pattern>
    </servlet-mapping>
    
    <!-- Reservation Servlet -->
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>Controller.ReservationServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/reservation/*</url-pattern>
    </servlet-mapping>

</web-app>
